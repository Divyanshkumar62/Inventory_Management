    <!-- Main Content -->
    <div class="flex-1 p-6">
        <div class="form-container bg-white border-3 border-gray-800 p-8 rounded-lg shadow-lg mx-auto w-full max-w-3xl">
            <h2 class="text-center text-3xl font-bold text-gray-700 mb-8" style=" font-family: 'Roboto', sans-serif;">Update Product Item</h2>
            <form action="/product/update" method="post" enctype="multipart/form-data" class="upadte-form">
                <div class="form-group mb-6">
                    <label for="pupdate" class="block text-gray-700 font-semibold mb-2">Search </label>
                    <input type="text"  class="form-control p-2 w-full border rounded" name="psearch" id="pupdate" placeholder="Enter product name" oninput="handleUpdate()">
                    <div class="drop-down roboto-regular" style="display: none;"></div>

                    <label for="productName" class="block text-gray-700 font-semibold mb-2">Product Name</label>
                    <input type="text" id="productName" name="productName" class="form-control p-2 w-full border rounded" id="productName" placeholder="Enter product name" required>

                    <label for="productCategory" class="block text-gray-700 font-semibold mb-2">Product Category</label>
                    <input type="text" id="productCategory" name="productCategory" class="form-control p-2 w-full border rounded" id="productName" placeholder="Enter product Category" required>

                    
                </div>
                
                
                <div class="form-group mb-6 flex items-center gap-4">
                    <label for="productId" class="block text-gray-700 font-semibold">Product ID</label>
                    <input type="text" name="productId" class="form-control p-2 w-1/3 border rounded" id="productId" readonly>

                    <label for="quantity" class="block text-gray-700 font-semibold">Quantity</label>
                    <input type="number" name="quantity" class="form-control p-2 w-1/3 border rounded" id="quantity" placeholder="Enter Available Quantity" required>
                </div>

                <div class="form-group mb-6 flex items-center gap-4">
                    <label for="price" class="block text-gray-700 font-semibold mb-2 mt-4">Price</label>
                    <input type="number" id="price" name="price" class="form-control p-2 w-full border rounded" id="Category" placeholder="Enter product category" required>

                    <label for="productImage" class="block text-gray-700 font-semibold">Image URL</label>
                    <input type="file" name="image" class="form-control p-2 w-3/5 border rounded" id="productImage">
                </div>

                <button type="submit" class="btn btn-primary bg-blue-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-600 w-full" onclick="handleSubmit(e)">Submit</button>
            </form>
        </div>
    </div>
</div>

